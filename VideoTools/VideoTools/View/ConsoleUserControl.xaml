<UserControl x:Class="VideoTools.View.ConsoleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoTools.View" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <Label Content="Console" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="227" FontFamily="TechnicBold" FontSize="16" FontWeight="Bold" Margin="10,0,0,0"/>

        <TextBox HorizontalAlignment="Left" Height="403" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" Background="Black" Text="{Binding ExecutionLog, UpdateSourceTrigger=PropertyChanged}" Foreground="White" />
    </Grid>
</UserControl>
